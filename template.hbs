<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <style>

  </style>
  <body>
    <div class="container-fluid p-4 d-flex flex-column gap-3">
      <div
        class="border rounded p-2 text-uppercase d-flex justify-content-between"
      >
        <div class="fw-bold">Identification status</div>
        <div
          style="background-color: {{statusColor
            onboarding.status
          }}; border-radius: 18px; padding:5px; color: white;"
          class="small"
        >{{onboarding.status}}</div>
      </div>

      <div
        class="border rounded p-2 text-uppercase d-flex justify-content-between"
      >
        <div class="fw-bold">COMPLETED at</div>
        <div>{{onboarding.completed_at}}</div>
      </div>

      <div class="border rounded p-2">
        <p class="text-uppercase fw-bold">Identification details</p>
        <div class="row">
          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">onboarding id:</div>
            <div>{{onboarding.oid}}</div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">onboarding url</div>
            <div
              style="word-wrap: break-word;  word-break: break-all; width: 300px;"
            >
              {{onboarding.url}}
            </div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">creation date</div>
            <div>{{onboardingReport.date}}</div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">number of attempts</div>
            <div>{{onboardingReport.attempts}}</div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">KYC TYPE</div>
            <div>{{onboarding.kyc_type}}</div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">user ip address</div>
            <div>{{onboardingReport.ip}}</div>
          </div>

          <div class="mb-3 col-6">
            <div class="text-uppercase text-secondary">MESSAGE</div>
            <div>{{onboarding.status_message}}</div>
          </div>
        </div>
      </div>

      <div class="border rounded p-2">
        <p class="text-uppercase fw-bold">extracted identity information</p>
        <div class="row">
          {{#each onboardingReport.extracted_data as |data|}}
            <div class="mb-3 col-6">
              <div class="text-uppercase text-secondary">{{data.name}}</div>
              <div
                style="word-wrap: break-word;  word-break: break-all; width: 300px;"
                class="text-wrap"
              >{{data.value}}</div>
            </div>
          {{/each}}

        </div>
      </div>

      {{#each onboardingReport.reports as |report|}}
        <div class="border rounded p-2">
          <div class="text-uppercase d-flex justify-content-between mb-3">
            <div class="fw-bold text-uppercase">{{report.name}}</div>
            <div
              style="background-color: {{statusColor
                report.status
              }}; border-radius: 18px; padding:5px; color: white;"
              class="small"
            >{{report.status}}</div>
          </div>

          <div class="row">
            <div class="col">
              <div class="mb-3 w-100">
                {{#each report.sub_reports as |subReport|}}
                  <div class="d-flex justify-content-between small mb-2">
                    <div class="text-uppercase">{{subReport.name}}</div>
                    <div
                      style="color: {{statusColor subReport.status}};"
                    >{{subReport.status}}</div>
                  </div>
                {{/each}}

              </div>

            </div>

          </div>
        </div>
      {{/each}}
    </div>
  </body>
</html>